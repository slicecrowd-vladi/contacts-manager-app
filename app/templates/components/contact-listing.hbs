<div class="single-contact">
  {{#link-to "contacts.contact.edit" tagName="button" class="btn btn-default btn-lg"}}Edit{{/link-to}}
  <button class="btn btn-default btn-lg">Archive</button>
  <button class="btn btn-default btn-lg btn-danger">Delete</button>
  <div class="contact-attr">
    <p class="contact-attr-txt name">{{contact.firstname}} {{contact.lastname}}</p>
    <p class="contact-attr-txt"><span>Email:</span> <span>{{contact.email}}</span></p>
    <p class="contact-attr-txt"><span>Phone:</span> <span>{{contact.phone}}</span></p>
    <p class="contact-attr-txt">
      {{#if contact.isarchived}}
        Is Archived
      {{else}}
        Is Not Archived
      {{/if}}
    </p>
  </div>
</div>

<div class="contact-edit">
  <fieldset class="contact-attr-txt">
    <label>First Name</label>
    {{input value=contact.firstname}}
  </fieldset>

  <fieldset class="contact-attr-txt">
    <label>Last Name</label>
    {{input value=contact.lasttname}}
  </fieldset>

  <fieldset class="contact-attr-txt">
    <label>Email</label>
    {{input value=contact.email}}
  </fieldset>

  <fieldset class="contact-attr-txt">
    <label>Phone</label>
    {{input value=contact.phone}}
  </fieldset>

  <fieldset class="contact-attr-txt">
    <label>Archive?</label>
    {{input type="checkbox" name="isArchived" checked=contact.isarchived}}
  </fieldset>

  <fieldset>
    {{#link-to "contacts.contact" tagName="button" class="btn btn-default btn-lg"}}Cancel{{/link-to}}
    <button class="btn btn-default btn-lg btn-primary">Save</button>
  </fieldset>
</div>